<%- include('../Includes/begin.ejs') %>
    <%- include('../Includes/staff_nav.ejs') %>


        <section id="content-wrapper">
            <main role="main" class="pt-5 main">

                <div class="main-content">
                    <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                        style="height: 100px; background-size: cover; background-position: center top;">
                    </div>
                    <div class="container-fluid mt--7">
                        <div class="row">
                            <div class="col-xl-12 order-xl-1">
                                <div class="card bg-secondary shadow">
                                    <div class="card-header bg-white border-0">
                                        <div class="row align-items-center">
                                            <div class="col-8">
                                                <h3 class="mb-0">Minha Conta</h3>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="card-body">

                                        <h6 class="heading-small text-muted mb-4">Informações do Usuário</h6>
                                        <div class="pl-lg-4">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label" for="input-name">Nome</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= user.st_name %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label"
                                                            for="input-gender">Gênero</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= user.gender %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label" for="input-email">Email
                                                        </label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= user.email %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label" for="input-dob">Data de
                                                            Nascimento</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= userDOB %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="my-4">
                                        <!-- Address -->
                                        <h6 class="heading-small text-muted mb-4">Informações de Contato</h6>
                                        <div class="pl-lg-4">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Endereço</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= user.st_address %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-4">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label"
                                                            for="input-country">Pais</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>Brasil</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label"
                                                            for="input-contact">Contato</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= user.contact %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <hr class="my-4">
                                        <h6 class="heading-small text-muted mb-4">Responsabilidades</h6>
                                        <div class="pl-lg-4">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Departamento</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= deptData[0].d_name %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Informações de turma</label>
                                                        <div class="table-responsive">
                                                            <table class="table">
                                                                <thead class="thead-dark">
                                                                    <tr>
                                                                        <th scope="col">#</th>
                                                                        <th scope="col">CURSO</th>
                                                                        <th scope="col">SEMESTRE</th>
                                                                        <th scope="col">SESSÃO</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% for(let i=0; i < classData.length; i++) { %>
                                                                        <tr>
                                                                            <th scope="row">
                                                                                <%= i + 1 %>
                                                                            </th>
                                                                            <td>
                                                                                <%= classData[i].name %> (<%=
                                                                                        classData[i].c_id %>)
                                                                            </td>
                                                                            <td>
                                                                                <%= classData[i].semester %>
                                                                            </td>
                                                                            <td>
                                                                                <%= user.dept_id %>-<%=
                                                                                        classData[i].section %>
                                                                            </td>

                                                                        </tr>
                                                                        <% } %>
                                                                </tbody>

                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>




            </main>
        </section>


        <%- include('../Includes/staff_end.ejs') %>